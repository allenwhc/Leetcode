
public class Solution {
	public static boolean isNumber(String s) {
        int len=s.length();
        if(len==0) return false;
        else if(len==1 && Character.isDigit(s.charAt(0))) return true;
        int i=0;
        while(i<len){
        	char c=s.charAt(i);
        	//1. Skip front spaces
        	while(i<len && c==' ') i++;
        	
        	//2. Check if has sign
        	if(c=='+' || c=='-') i++;

        	//3. Check # of digits
        	int noPts=0;
        	int noDgts=0;
        	while(c=='.' || Character.isDigit(c)){
        		if(c=='.') noPts++;
        		else if (Character.isDigit(c)) noDgts++;
        		i++;
        	}
        	if(noDgts<1 || noPts>1) return false;
        	
        	
        }
    }
	
	public static void main(String[] args) {
		String[] s={"0"," 0.1 ","abc","1 a","2e10"};
		boolean[] num=new boolean[s.length];
		for(int i=0; i<s.length; i++){
			num[i]=isNumber(s[i]);
			if(num[i])
				System.out.println("'"+s[i]+"' is a number");
			else
				System.out.println("'"+s[i]+"' is not a number");
		}
	}
}
