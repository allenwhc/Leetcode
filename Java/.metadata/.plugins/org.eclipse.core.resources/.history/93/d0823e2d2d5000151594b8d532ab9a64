import javax.xml.soap.Node;

public class Solution {
	public static int countUnivalSubtrees(TreeNode root){
		if(root==null) return 0;
		int[] count=new int[1];
		isUnivalSubtree(root,count,root.val);
		return count[0];
	}
	
	private static boolean isUnivalSubtree(TreeNode root, int[] count, int value){
		if(root==null) return true;
		boolean leftUnivalSubtree=isUnivalSubtree(root.left, count, root.val);
		boolean rightUnivalSubtree=isUnivalSubtree(root.right, count, root.val);
		if(leftUnivalSubtree && rightUnivalSubtree)
			count[0]++;
		return leftUnivalSubtree && rightUnivalSubtree && root.val==value;
	}
	
	
	public static void main(String[] args){
		TreeNode root=new TreeNode(5);
		root.left=new TreeNode(1);
		root.right=new TreeNode(5);
		root.left.left=new TreeNode(5);
		root.left.right=new TreeNode(5);
		root.right.right=new TreeNode(5);
		System.out.println("The binary tree is:");
		TreeNode.printBinaryTree(root, 0);
		System.out.println("Number of univalue subtrees: "+countUnivalSubtrees(root));
	}
}
