import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;

public class Solution {
	//H-Index I
	public static int hIndex(int[] citations){
		int n=citations.length;
		if(n==0) return 0;
		
		//Sort array in descending order
		quickSort(citations, 0, n-1);

		HashMap<Integer, Integer> map=new HashMap<>();
		for(int i=0; i<n; i++){
			map.put(citations[i], i);
		}
		
		//Find the last index where citations[index]>=index
		int index=0;
		ArrayList<Integer> keys=new ArrayList<Integer>(map.keySet());
		for(int i=keys.size()-1; i>=0; i--){
			if(keys.get(i)>=map.get(keys.get(i))+1)
				index=map.get(keys.get(i));
			else break;
		}
		return index;
	}
	
	private static void quickSort(int[] nums, int start, int end){
		if(nums==null || nums.length==0) return;
		if(start>=end) return;
		
		int middle=(start+end)/2;
		int pivot=nums[middle];
		int i=start,j=end;
		while(i<=j){
			while(nums[i]>pivot) i++;
			while(nums[j]<pivot) j--;
			if(i<=j){
				int temp=nums[i];
				nums[i]=nums[j];
				nums[j]=temp;
				i++;
				j--;
			}
		}
		if(start<j) quickSort(nums, start, j);
		if(end>i) quickSort(nums, i, end);
	}
	
	public static void main(String[] args){
		int[] citations={0};
		System.out.println("The citations are: "+Arrays.toString(citations));
		System.out.println("The maximum H-Index is: "+hIndex(citations));
	}
}
