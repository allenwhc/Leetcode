import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.HashMap;
import java.util.List;

public class Solution {
	//H-Index I
	public static int hIndex(int[] citations){
		int n=citations.length;
		if(n==0) return 0;
		Arrays.sort(citations);
		HashMap<Integer, Integer> map=new HashMap<>();
		List<Integer> hIndices=new ArrayList<>();
		map.put(citations[0], n);
		for(int i=1; i<n; i++){
			if(citations[i]!=citations[i-1])
				map.put(citations[i], n-i);
		}
		for(Integer key:map.keySet()){
			if(key==map.get(key))
				hIndices.add(key);
		}
		Collections.sort(hIndices);
		return hIndices.get(hIndices.size()-1);
	}
	
	public static void main(String[] args){
		int[] citations={3,0,6,1,5};
		System.out.println("The citations are: "+Arrays.toString(citations));
		System.out.println("The maximum H-Index is: "+hIndex(citations));
	}
}
