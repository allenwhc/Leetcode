
public class Solution {
	public static int numWays(int n, int k){
		if(n==0 || k==0) return 0;
		else if(k==1) return 1;
		int[] ways=new int[n];
		ways[0]=k;
		for(int i=1; i<n; i++){
			ways[i]=ways[i-1]*(k-1);
		}
		return ways[n-1];
	}
	
	public static void main(String[] args) {
		int n=2;
		int k=1;
		System.out.println("There are "+numWays(n, k)+" ways to paint "+n+" houses in "+k+" colors.");
	}
}
